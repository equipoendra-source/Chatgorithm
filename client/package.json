{
  "name": "chatgorithm-client",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "electron.cjs",
  "homepage": "./",
  "description": "CRM para Talleres con IA y WhatsApp",
  "author": "Chatgorithm",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently -k \"vite\" \"wait-on tcp:5173 && electron .\"",
    "electron:build": "npx rimraf dist_electron && vite build && electron-builder --win nsis"
  },
  "dependencies": {
    "@capacitor/android": "^8.0.0",
    "@capacitor/app": "^8.0.0",
    "@capacitor/cli": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@capacitor/local-notifications": "^8.0.0",
    "@capacitor/push-notifications": "^8.0.0",
    "@twilio/voice-sdk": "^2.10.1",
    "driver.js": "^1.4.0",
    "emoji-picker-react": "^4.5.16",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.34.5",
    "socket.io-client": "^4.7.2"
  },
  "devDependencies": {
    "@capacitor/assets": "^3.0.5",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cordova-res": "^0.15.4",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.31",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.chatgorithm.app",
    "productName": "Chatgorithm",
    "copyright": "Copyright Â© 2026 Chatgorithm",
    "mac": {
      "category": "public.app-category.business"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon.ico"
    },
    "linux": {
      "target": "AppImage"
    },
    "directories": {
      "output": "dist_electron",
      "buildResources": "."
    },
    "files": [
      "dist/**/*",
      "electron.cjs",
      "package.json",
      "icon.ico"
    ],
    "extends": null
  }
}
